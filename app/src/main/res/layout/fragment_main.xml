<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/refresh_view_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/pet_post_activity_vertical_margin"
        android:paddingLeft="@dimen/pet_post_activity_horizontal_margin"
        android:paddingRight="@dimen/pet_post_activity_horizontal_margin"
        android:paddingTop="@dimen/pet_post_activity_vertical_margin"
        />
</android.support.v4.widget.SwipeRefreshLayout>


